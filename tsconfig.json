{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "types": [
      "lodash",
      "typed-screeps"
    ]
  },
  "include": [
    "nether-os/**/*.ts",
    "nether-os/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/snippets",
    "arcath-arcos",
    "arcai2"
  ]
}
